<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.Views.PageCargInfo">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Green" Padding="20" CornerRadius="0">
                <Label Text="Bienvenido" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
            </Frame>
            
            <Label Text="Los datos Ingresados son los siguientes:"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />

            <Label Text="{Binding nombre}"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />


            <Label Text="{Binding apellidos}"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />

            <Label Text="{Binding edad}"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />

            <Label Text="{Binding correo}"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />

            <Label Text="{Binding direccion}"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>